<div class="container mt-4">
  <h1>New Game</h1>

  <ul id = "wrapper" class="list-inline align-middle">
  <% @letters.each do |letter| %>
    <li class="list-inline-item text-center"><%= letter %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find?</p>

  <form action="/score" method="post" class="form-inline">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>

    <input type="text" name="guess" id="guess" placeholder="Type you best try" class="form-control mr-4">
    <input type="submit" class="btn btn-primary">
  </form>
</div>
